@page
@model Internal_Resource_Booking_System.Pages.Resources.IndexModel
@{
    ViewData["Title"] = "Resource List";
}

<h3>@ViewData["Title"]</h3>
<hr />
<p>
    <a asp-page="/Resources/Create" class="btn btn-primary">Create</a>
</p>
<table class="table table-success table-striped table-responsive table-hover w-100">
    <thead class="table-dark">
        <tr>
            
            <th>
                Resource Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resources[0].Capacity)
            </th>
            <th>
                Available
            </th>
            <th style="width:200px">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Resources.Any())
        {
            @foreach(var resource in Model.Resources)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(item => resource.ResourceName)
                    </td>
                    <td>
                        @Html.DisplayFor(item => resource.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(item => resource.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(item => resource.Capacity)
                    </td>
                    <td>
                        @(resource.IsAvailable ? "Yes" : "No")
                    </td>
                    <td>
                        <a asp-page="/Resources/Edit" asp-route-id="@resource.Id" class="btn btn-primary">Update</a>
                        <a asp-page="/Booking/Create" asp-route-resourceId="@resource.Id" class="btn btn-primary">Book</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@resource.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this resource?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </td>
                </tr>
            }
        }
        else
        {
             <tr>
                 <td colspan="5" class="text-center">
                     No resources available at the moment!
                 </td>
             </tr>           
        }
    </tbody>

</table>
